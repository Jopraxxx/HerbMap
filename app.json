{
  "expo": {
    "name": "HerbMap",
    "slug": "HerbMap",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to show nearby herbal plants."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff",
        "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"]
      }
    },
    "web": {
      "favicon": "./assets/icon.png"
    }
  }
}
